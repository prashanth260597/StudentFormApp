@page
@model StudentFormApp.Pages.Student.CreateModel

<div class="form-container">
    <h2>Student Application</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="success-message">
            @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Form.Name"></label>
            <input asp-for="Form.Name" />
            <span asp-validation-for="Form.Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Form.Number"></label>
            <input asp-for="Form.Number" />
            <span asp-validation-for="Form.Number"></span>
        </div>

        <div class="form-group">
            <label asp-for="Form.Email"></label>
            <input asp-for="Form.Email" />
            <span asp-validation-for="Form.Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Form.Dob"></label>
            <input asp-for="Form.Dob" type="date" />
            <span asp-validation-for="Form.Dob"></span>
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
